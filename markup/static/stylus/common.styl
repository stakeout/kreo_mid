// Common styles of the project
html, body
  height 100%

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

.page
  font-family $customFont
  -webkit-text-size-adjust: 100%;

.page__wrapper
  min-height 100%
  margin-bottom -50px

img
  max-width 100%
  height auto

a
  text-decoration none
  // -webkit-text-decoration-skip: ink;
  //   text-decoration-skip: ink;

ul
  list-style none
  padding 0
  margin 0

h1,h2,h3,p
  margin 0
  padding 0

.container
  display block

.page__inner
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  flex-direction column

main
  flex-grow 1

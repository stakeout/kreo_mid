.pricing
  background-color: #F5F6F7
  &__title
    width 100%
    margin-bottom 55px
    padding-left 25px
    font-size 32px
    line-height 40px
    color #37474f
    font-weight 400
    text-transform: uppercase
  &__wrap
    background-color: #DBDFE4
    padding-top: 60px
    padding-bottom: 60px
  &__inner-wrap
    row-flex()
    justify-content center
  &__card
    col()
    size(4)
    size-lg(5)
    size-md(6)
    size-xs(12)
    display flex
    flex-direction: column
    align-items: center
    padding-top 40px
    padding-bottom 60px
    background-color: #fff
    text-align center
    border-radius 20px
    box-shadow 0 3px 12px rgba(0,0,0,.15)
    from-to(481px,640px, @block{
      flex-basis 75%
    })
    &:not(:last-child)
      color #404F6B
      shift-right(0.5)
      lg-block(@block{
        margin-right 15px
      })
      xs-block(@block{
        margin-right 15px
        margin-bottom 20px
      })
      from-to(481px,640px, @block{
        margin-bottom 30px
      })
    &--plus
      color #fff
      background-color #FF7043
  &__card-title
    width 230px
    font-size: 42px
    line-height: 1.2
    font-weight 400
    text-align: center
    margin-bottom: 20px
    color: #5C8AE6
    &--plus
      color #fff
  &__list
    margin-bottom: 40px
  &__item
    position relative
    margin-bottom 20px
    padding-left 20px
    color: #404F6B
    font-size: 16px
    line-height: 21px
    &::before
      position absolute
      content ''
      left 0
      top 2px
      width 7px
      height 12px
      border 2px solid #5C8AE6
      border-top none
      border-left none
      transform rotate(45deg)
    &--white
      color #fff
      &::before
        border 2px solid #fff
        border-top none
        border-left none
  &__cost
    margin-bottom 65px
    p
      margin-bottom 10px
      font-size 36px
      line-height 46px
      font-weight: 700
      color: #5C8AE6
    span
      font-size: 12px
      color: #000
      line-height 15px
    &--plus
      margin-bottom 47px
      p,
      span
        color #fff
        margin-bottom 0
      p > span
        display block
        padding-top 10px
        font-size 12px
        line-height 15px
  &__btn
    width 200px
    padding-top 20px
    padding-bottom 19px
    font-size: 16px
    font-weight 400
    line-height: 21px
    text-transform uppercase
    border-radius: 31px
    color: #5C8AE6
    border 2px solid #5C8AE6
    transition backgrond-color .2s linear, color .2s linear
    &:hover,
    &:focus
      color #fff
      background-color #5C8AE6
    &--plus
      color #fff
      border 2px solid #fff
      &:hover,
      &:focus
        color #FF7043
        background-color #fff
.pricing__card--free
  .pricing__cost
    span
      visibility hidden

.blog-data
  &__inner
    position relative
    padding-top 120px
    padding-bottom 40px
  &__list
    row-flex()
  &__item
    col()
    size(4)
    size-md(6)
    size-xs(12)
    margin-bottom 30px
    transition all .4s ease-in-out
    box-shadow 0 2px 4px 0 rgba(0,0,0,0.13)
    &:hover
      box-shadow: 0 3px 10px 0 rgba(0,0,0,0.21)
    &:first-child
      size(8)
      size-md(6)
      size-xs(12)
    &.subscribe-to
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      flex-direction column
      align-items center
      padding 30px 0 60px
      background-color #49495e
      text-align center
      background-image url('data:image/svg+xml;utf8;base64,')
      background-repeat no-repeat
      background-size 160px 160px
      background-position center 50px
      size-md(6)
      xs-block(@block{
        display none
      })
      p
        max-width 300px
        margin auto auto 20px
        font-size 30px
        text-transform uppercase
        color #fff
      a
        width 220px
        padding 15px 0
        font-size 16px
        color #fff
        border-radius 30px
        text-transform uppercase
  &__img-wrap
    display block
    & > img
      display block
      width 100%
  &__content-wrapper
    padding 20px

  &__content
    font-size 14px
    color #72808e
    word-wrap break-word
    line-height 1.5
    strong
      font-weight 700
  &__item-title
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin 0 0 9px
    a
      font-size 20px
      line-height 1.45
      letter-spacing .3px
      color #45474d
      font-weight 400
  &__date
    display none
.categories
  display flex
  &__link
    font-size 10px
    line-height 2
    font-weight 300
    color #3197d6
    text-transform uppercase

.blog-post
  padding-top 150px
  margin-bottom 60px
  &__content
    h1
      margin-bottom 30px
      font-size 42px
      font-weight 400
    h2
      font-size 30px
      font-weight 400
      margin-bottom 30px
    p
      font-size 16px
      line-height 24px
      margin-bottom 15px
.blof-socials
  display none
  position fixed
  top 300px
  left calc(50% - 42vw)

        })
.video-box
  position absolute
  right 15px
  top 94px
  width 578px
  height 338px
  xs-block(@block{
    position relative
    top 0
    width 100%
    height auto
  })
  a
    position relative
    display block
    xxs-block(@block{
      height 120px
    })
    &::before
      position absolute
      content ''
      left 50.5%
      top 53.5%
      transform translate(-50.5%, -53.5%)
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 12px 0 12px 18px;
      border-color: transparent transparent transparent #fff
      border-radius 3px
      z-index 1
    &::after
      position absolute
      content ''
      width 100px
      height 100px
      background-color: rgba(255,112,66,0.8)
      border-radius 50%
      left 50%
      top 55%
      transform translate(-50%, -55%)
    &:hover
      &::after
        background-color: rgba(255,112,66,1)
  img
    xxs-block(@block{
      display none
    })
.controls
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  flex-wrap wrap
  align-items center
  margin-bottom 50px
  &__title
    margin-right 135px
    color #fff
    font-size 36px
    line-height 1
    font-weight 400
    text-transform uppercase
    xs-block(@block{
      margin-right auto
    })
    xxs-block(@block{
      margin-right auto
      margin-left auto
      font-size 36px
      margin-bottom 50px
    })
    span
      font-weight 400
  &__nav-link
    position relative
    color #fff
    font-size 16px
    line-height 21px
    font-weight 400
    text-transform uppercase
    &:not(:last-child)
      margin-right 50px
    &:hover,
    &:focus,
    &--active
      &::before
        position absolute
        content ''
        left 0
        bottom -10px
        width 100%
        height 1px
        background-color #fff
.revit-plugin

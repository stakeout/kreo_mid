.promo
  &__header
    position relative
    min-height 620px
    padding-top 95px
    background url('https://www.kreo.net/hubfs/kreo_new/static/img/content/header_pattern.svg') no-repeat,
               linear-gradient(135deg, #304267 0%, #496287 100%)
    background-size 860px 640px, 100%
    background-position right bottom
    h1
      margin-bottom 35px
      font-size 52px
      line-height 1.5
      color #fff
      font-weight 400
      xs-block(@block{
        font-size 59px
        line-height 1.2
      })
      xxs-block(@block{
        font-size 38px
      })
    p:not(.controls__title)
      max-width 550px
      font-size 20px
      line-height 30px
      color #fff
    &--view,
    &--plan
      padding-top 30px
      padding-bottom 30px
      xs-block(@block{
        padding-top 90px
      })
      h1
        margin-bottom 30px
        font-size 40px
        line-height 40px
        font-weight 400
        xxs-block(@block{
          font-size 28px
        })
      p:not(.controls__title)
        font-size 20px
        line-height 30px
        xs-block(@block{
          margin-bottom 30px
        })
        xxs-block(@block{
          font-size 16px
          line-height 1.5
        })
      .container
        position relative
        min-height 100%
  &__content
    padding-top 80px
    padding-bottom 120px
    xs-block(@block{
      padding-top 60px
      padding-bottom 60px
    })
    h2
      margin-bottom 50px
      font-size 36px
      line-height 1
      font-weight 400
      color #37474f
      xs-block(@block{
        margin-bottom 30px
      })
    p
      font-size 16px
      line-height 32px
      color #455a64
      &:not(:last-of-type)
        margin-bottom 40px
        xs-block(@block{
          margin-bottom 20px
        })
.video-box
  position absolute
  right 0
  top 175px
  width 600px
  height 338px
  xs-block(@block{
    position relative
    top 0
    width 100%
    height auto
  })
  a
    position relative
    display block
    xxs-block(@block{
      height 120px
    })
    &::before
      xxs-block(@block{
        position absolute
        content 'Watch Video'
        left 50%
        bottom 0
        font-size 16px
        line-height 1
        color #fff
        transform translateX(-50%)
      })
    &::after
      position absolute
      content ''
      width 68px
      height 50px
      left 50%
      top 50%
      transform translate(-50%, -50%)
      border-radius 10px
      background-color rgba(255,255,255,.7)
      background-image url('data:image/svg+xml;base64,')
      background-repeat no-repeat
      background-size 75px 75px
      background-position center
      cursor pointer
    &:hover::after
      background-color rgba(255,255,255,1)

  img
    xxs-block(@block{
      display none
    })
.controls
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  flex-wrap wrap
  align-items center
  margin-bottom 50px
  &__title
    margin-right 135px
    color #fff
    font-size 42px
    line-height 1
    font-weight 400
    text-transform uppercase
    xs-block(@block{
      margin-right auto
    })
    xxs-block(@block{
      margin-right auto
      margin-left auto
      font-size 36px
      margin-bottom 50px
    })
    span
      font-weight 400
  &__nav-link
    position relative
    color #fff
    font-size 16px
    line-height 21px
    font-weight 400
    text-transform uppercase
    &:not(:last-child)
      margin-right 50px
    &:hover,
    &:focus,
    &--active
      &::before
        position absolute
        content ''
        left 0
        bottom -10px
        width 100%
        height 1px
        background-color #fff

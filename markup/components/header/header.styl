.page-header
  position relative
  width 100%
  margin-bottom -70px
  background linear-gradient(135deg, #304267 0%, #496287 100%)
  box-shadow: 3px 0 6px rgba(255,255, 255, 0.15)
  z-index 1
  xs-block(@block{
    position fixed
    z-index 100
  })
  &.stick
    position fixed
    z-index 100
  &__inner
    position relative
    display flex
    align-items center
    height 70px
    xs-block(@block{
      height 50px
    })
    &.container
      max-width 1300px
  &__nav-toggle
    display none
    width 35px
    height 30px
    padding 0
    font-size 0
    background-color transparent
    border none
    xs-block(@block{
      display block
      position absolute
      right 15px
    })
    span
      position relative
      display block
      width 35px
      height 3px
      background-color #fff
      border-radius 1px
      transition all 300ms ease-in-out
      &::before,
      &::after
        display block
        position absolute
        content ''
        width 35px
        height 3px
        background-color #fff
        border-radius 1px
        transition all 300ms ease-in-out
      &::before
        top -9px
      &::after
        bottom -9px
    &.open
      span
        background-color transparent
        &::before,
        &::after
          top 0
        &::before
          transform rotate(45deg)
        &::after
          transform rotate(-45deg)
.logo
  display flex
  align-items center
  width 100px
  height 60px
  margin-right 55px
  xs-block(@block{
    width 100px
    margin-right 0
  })
.navigation
  height inherit
  &.open
    opacity 1
    transform scale(1)
  xs-block(@block{
    position absolute
    top 100%
    bottom 0
    left 0
    width 100%
    opacity 0
    transform scale(0)
    background-color#fff
    z-index 101
  })
  &__list
    display flex
    align-items center
    height inherit
    xs-block(@block{
      display block
      height auto
      background-color #fcfcfc
    })
  &__item
    position relative
    display flex
    align-items center
    height inherit
    xs-block(@block{
      display flex
      justify-content center
      width 100%
    })
    &.dropdown
      xs-block(@block{
        flex-wrap: wrap;
      })
    &--active > a::after
      width 100%
    &:not(:last-child)
      margin-right 40px
      xs-block(@block{
        margin-right 0
        border-bottom 1px solid rgba(0,0,0,.05)
      })
    &.dropdown:hover > .sub-nav
      display block
    &:hover:not(.dropdown) > a::after
      width 100%
      xs-block(@block{
        width 0
      })
  &__link
    position relative
    font-size 14px
    line-height 1
    font-family inherit
    font-weight 300
    color #fff
    text-transform uppercase
    outline none
    &.stick
      color #304267
    xs-block(@block{
      display block
      color #304267
      padding 20px 30px
    })
    &::after
      position absolute
      content ''
      width 0
      height 1px
      left 0
      bottom -10px
      background-color: #ff7043
      transition width .3s ease
      xs-block(@block{
        bottom 3px
      })
.sub-nav
  display none
  position absolute
  width 180px
  left 0
  top 85%
  border-radius 5px
  box-shadow: 0 2px 10px 0 rgba(52,57,72,0.14);
  z-index 100
  xs-block(@block{
    display block
    position relative
    width 100%
    box-shadow none
    border-radius 0
    z-index 0
  })
  &__item:first-child
    border-radius 5px 5px 0 0
  &__item:last-child
    border-radius 0 0 5px 5px
    a
      color #8898B3
      border-radius 0 0 5px 5px
  &__item
    background-color #fff
    &:not(:last-child)
      box-shadow: inset 0 -1px 0 0 #E1E6ED
    &:not(:last-child):hover
      background-color: #E6EEFA
  &__link
    display block
    height 45px
    padding-left 20px
    font-family inherit
    font-size 12px
    font-weight 400
    color #404F6B
    line-height 45px
    text-transform uppercase
    xs-block(@block{
      padding-left 0
      text-align center
    })
    &.coming
      position relative
      &:after
        position absolute
        content 'coming soon'
        top 5px
        right 15px
        font-size 10px
        line-height 12px
        color #404F6B
        text-transform lowercase
.line
  visibility hidden


.page-header
  width 100%
  &.stick
    position fixed
    transition: all 0.4s ease-in-out;
    background: rgba(255,255,255,1);
    box-shadow: 3px 0 6px rgba(0, 0, 0, 0.19)
    z-index 100
  &__inner
    display flex
    align-items center
    height 80px
  &__nav-toggle
    display none
    width 35px
    height 30px
    padding 0
    font-size 0
    background-color transparent
    border none
    span
      position relative
      display block
      width 35px
      height 5px
      background-color blue
      border-radius 1px
      transition all 300ms ease-in-out
      &::before,
      &::after
        display block
        position absolute
        content ''
        width 35px
        height 5px
        background-color blue
        border-radius 1px
        transition all 300ms ease-in-out
      &::before
        top -10px
      &::after
        bottom -10px
    &.active
      span
        background-color transparent
        &::before,
        &::after
          top 0
        &::before
          transform rotate(45deg)
        &::after
          transform rotate(-45deg)
.logo
  display flex
  align-items center
  width 140px
  height 45px
  margin-right 55px
.navigation
  height inherit
  &__list
    display flex
    align-items center
    height inherit
  &__item
    position relative
    display flex
    align-items center
    height inherit
    &--active > a::after
      width 100%
    &:not(:last-child)
      margin-right 40px
    &.dropdown:hover > .sub-nav
      display block
    &:hover:not(.dropdown) > a::after
      width 100%
  &__link
    position relative
    font-size 16px
    line-height 1
    font-family inherit
    font-weight 500
    color #37474f
    text-transform uppercase
    outline none
    &::after
      position absolute
      content ''
      width 0
      height 2px
      left 0
      bottom -10px
      background-color: #F58240;
      transition width .3s ease
.sub-nav
  display none
  position absolute
  width 180px
  left 0
  top 85%
  border-radius 5px
  box-shadow: 0 2px 10px 0 rgba(52,57,72,0.14);
  z-index 100
  &__item:first-child
    border-radius 5px 5px 0 0
  &__item:last-child
    border-radius 0 0 5px 5px
    a
      border-radius 0 0 5px 5px
  &__item
    background-color #fff
    &:not(:last-child):hover
      background-color: #F0F2F5
  &__link
    display block
    height 45px
    padding-left 20px
    line-height 45px
    box-shadow: inset 0 -1px 0 0 #E1E6ED;
    &.coming
      position relative
      &:after
        position absolute
        content 'coming soon'
        top -14px
        font-size 12px
        color #4771bc
.line
  visibility hidden

